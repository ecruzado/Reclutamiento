@model SanPablo.Reclutador.Web.Models.ExperienciaPostulanteGeneralViewModel
@{
    Layout = "";
}
    <script type="text/javascript">

        $(document).ready(function () {
            $('.datepicker').datepicker({});
            $("#fechaTrabajoInicio").datepicker({});
            $("#fechaTrabajoFin").datepicker({});

            //Habilitar texto Otro 
            $('select#tipoCargo').change(function () {
                var tipoNombre = $(this).val();
                if (tipoNombre == '99') {
                    $('#NombreCargo_otro').removeAttr('disabled');
                }
                else {
                    $('#NombreCargo_otro').attr('disabled', 'disabled');
                }
            })
        });
                
        $(function () {
            $.datepicker.regional['es'] =
            {
                closeText: 'Cerrar',
                prevText: 'Previo',
                nextText: 'Próximo',
                monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
                'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
                monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun',
                'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
                monthStatus: 'Ver otro mes', yearStatus: 'Ver otro año',
                dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
                dayNamesShort: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sáb'],
                dayNamesMin: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sa'],
                dateFormat: 'dd/mm/yy', firstDay: 0,
                initStatus: 'Selecciona la fecha', isRTL: false
            };
            $.datepicker.setDefaults($.datepicker.regional['es']);
            $("#datepicker").datepicker({ minDate: "-1D", maxDate: "+1M +10D" });
        });
    </script>
@using (Html.BeginForm("Edit", "ExperienciaPostulante", FormMethod.Post, new { @id = "experienciaPostulanteForm" }))
    {
    @Html.ValidationSummary(true)
   
    <table style="margin-left:30px;">
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" style="width:130px">Empresa <span class="text-error">*</span></label>
            </td>
            <td class="colInput">
                @Html.TextBoxFor(model => model.Experiencia.NombreEmpresa)
                @Html.ValidationMessageFor(model => model.Experiencia.NombreEmpresa)
            </td>
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" >Cargo <span class="text-error">*</span></label>
            </td>
            <td class="colInput;input-xxlarge">
                    @Html.DropDownListFor(model => model.Experiencia.TipoCargoTrabajo, new SelectList(Model.TipoCargos, "Valor", "Descripcion", Model.Experiencia.TipoCargoTrabajo), new { @id = "Tipocargo"})
                    @Html.ValidationMessageFor(model => model.Experiencia.TipoCargoTrabajo )
            </td>
        </tr> 
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario"> Otro </label>
            </td>
            <td>
                @Html.TextBoxFor(model => model.Experiencia.TipoCargoTrabajo, new { @id="NombreCargo_otro",@disabled = "disabled"})
                @Html.ValidationMessageFor(model => model.Experiencia.TipoCargoTrabajo )
            </td>
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" > Fecha Inicio <span class="text-error">*</span></label>
            </td>
            <td class="colInput">
                @Html.TextBoxFor(model => model.Experiencia.FechaTrabajoInicio, new { @id = "fechaTrabajoInicio"})
                @Html.ValidationMessageFor(model => model.Experiencia.FechaTrabajoInicio)
            </td>
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" > Fecha Fin </label>
            </td>
            <td class="colInput">
                @Html.TextBoxFor(model => model.Experiencia.FechaTrabajoFin, new { @id = "fechaTrabajoFin"})
                @Html.ValidationMessageFor(model => model.Experiencia.FechaTrabajoFin)
            </td>
            <td>
                <Label style="display:inline-block; font-size:10pt" for="estudiando">   Actualmente Trabajando</Label>
                <input type="checkbox" value="estudiando" id="indicadorEstudiando" name="Estudiando">
            </td>
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" > Tiempo de Servicio </label>
            </td>
            <td class="colInput">
                @Html.TextBoxFor(model => model.Experiencia.TiempoDeServicio)
                @Html.ValidationMessageFor(model => model.Experiencia.TiempoDeServicio)
            </td>
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" > Motivo de Cese </label>
            </td>
            <td class="colInput">
                @Html.DropDownListFor(model => model.Experiencia.TipoMotivoCese, new SelectList(Model.TipoMotivosCese, "Valor", "Descripcion", Model.Experiencia.TipoMotivoCese))
                @Html.ValidationMessageFor(model => model.Experiencia.TipoMotivoCese)
            </td>
            
        </tr>
        </table>
        <div>
            <h5> Datos de Referencia</h5>
        </div>
    
        <table>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" style="width:160px" > Nombre de Referencia <span class="text-error">*</span></label>
            </td>
            <td class="colInput" >
                @Html.TextBoxFor(model => model.Experiencia.NombreReferente)
                @Html.ValidationMessageFor(model => model.Experiencia.NombreReferente)
            </td>
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" style="width:160px" > Cargo <span class="text-error">*</span></label>
            </td>
            <td class="colInput" >
                @Html.DropDownListFor(model => model.Experiencia.TipoCargoTrabajoReferente, new SelectList(Model.TipoCargosReferente, "Valor", "Descripcion", Model.Experiencia.TipoCargoTrabajoReferente))
                @Html.ValidationMessageFor(model => model.Experiencia.NombreReferente)
            </td>
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" > Celular de Referencia  </label>
            </td>
            <td class="colInput">
                @Html.TextBoxFor(model => model.Experiencia.NumeroMovilReferencia)
                @Html.ValidationMessageFor(model => model.Experiencia.NumeroMovilReferencia)
            </td>
            
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" > Telefono de Institucion <span class="text-error">*</span></label>
            </td>
            <td class="colInput">
                @Html.TextBoxFor(model => model.Experiencia.NumeroFijoInstitucionReferente, new { @style = "width: 100px"})
                @Html.ValidationMessageFor(model => model.Experiencia.NumeroFijoInstitucionReferente)
            </td>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" > Anexo </label>
            </td>
            <td class="colInput">
                @Html.TextBoxFor(model => model.Experiencia.NumeroAnexoInstitucionReferente, new { @style = "width: 70px"})
                @Html.ValidationMessageFor(model => model.Experiencia.NumeroAnexoInstitucionReferente)
            </td>
            
        </tr>
        </table>
}