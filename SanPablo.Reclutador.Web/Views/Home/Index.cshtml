@{
    ViewBag.Title = "Index";
}
@section Head{
    <link href="@Url.Content("~/Content/DataTables-1.9.4/media/css/DT_bootstrap.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{

<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/DataTables-1.9.4/media/js/jquery.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/DataTables-1.9.4/media/js/jquery.dataTables.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/DataTables-1.9.4/media/js/DT_bootstrap.js")" type="text/javascript"></script>

<script type="text/javascript">
    //Table initialisation 
    $(document).ready(function() {
        $('#userTable').dataTable({
            "sDom": "rt<'row'<'span3'i><'span3'l><'offset6'p>>",
            "sPaginationType": "bootstrap",
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@string.Format("{0}Home/GetDataTables",@Utils.AbsoluteWebRoot)",
            "fnServerData": function (url, data, callback) {
                $.ajax({
                    "url": url,
                    "data": data,
                    "success": callback,
                    "contentType": "application/x-www-form-urlencoded; charset=utf-8",
                    "dataType": "json",
                    "type": "POST",
                    "cache": false,
                    "error": function () {
                        alert("DataTables warning: JSON data from server failed to load or be parsed. " +
                        "This is most likely to be caused by a JSON formatting error.");
                    }
                });
            },
            "aoColumns": [
                        { "bSortable": true},
                        { "bSortable": false}],
            "oLanguage": {
                "sLengthMenu": "_MENU_ registros por página",
                "sNext": "Siguiente",
                "sPrevious": "Anterior",
                "sFirst": "Primero",
                "sProcessing": "Por favor espere",
                "sInfo": "Mostrando _START_ al _END_ de _TOTAL_"
            },
            "fnPreDrawCallback": function () {
                // gather info to compose a message
                //$('#myModal').modal('show');
                return true;
            },
            "fnDrawCallback": function () {
                // in case your overlay needs to be put away automatically you can put it here
                //$('#myModal').modal('hide');
            }
        });
        var oTable;
        oTable = $('#userTable').dataTable();

        $('#txtBuscarCodigo').blur(function (e) {
            oTable.fnFilter($(this).val(),0);
        });
        $('#txtBuscarDescripcion').blur(function (e) {
            oTable.fnFilter($(this).val(), 1);
        });

    });  

</script>
}
  <div class="row">
    <div class="span12">
        <div class="widget-box">
		    <div class="widget-title">
                <h5>Sedes</h5>
            </div>
      <form class="form-horizontal">
          <br />
          <div class="row show-grid">

                <div class="span5">
                  <div class="control-group">
                    <label class="" for="inputSuccess">Código</label>
                    <div class="">
                        <input id="txtBuscarCodigo" type="text"/>
                    </div>
                  </div>
              </div>
              <div class="span5">
                  <div class="control-group">
                    <label class="-label" for="selectError">Descripción</label>
                    <div class="">
                        <input id="txtBuscarDescripcion" type="text"/>
                    </div>
                  </div>
              </div>

          </div>

          <div class="offset9">
            <button type="submit" class="btn btn-small btn-info"><i class="icon-search icon-white"></i> Buscar</button>
            <button type="reset" class="btn">Limpiar</button>
          </div>
      </form>

        <table id="userTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Codigo Sede</th>
                    <th>Descripción Sede</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot></tfoot>
        </table>

        </div>

    </div>
  </div>

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="widget-box">
		    <div class="widget-title">
                <h5>ola k ase?</h5>
            </div>
      <form class="form-search">
          <div class="control-group success">
