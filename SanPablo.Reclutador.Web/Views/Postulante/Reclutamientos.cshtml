@{
    ViewBag.Title = "Reclutamientos";
    Layout = "~/Views/Shared/_LayoutExtranet.cshtml";
}
@section Head{
}

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            jQuery("#grdList").jqGrid({
               url: '@Url.Action("ListaReclutamientosPotulante", "Postulante")',
