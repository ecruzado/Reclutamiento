@model SanPablo.Reclutador.Web.Models.SeguridadViewModel
@using SanPablo.Reclutador.Entity

@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <title>Iniciar Sesión &middot; Sistema de Reclutamiento</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/custom-theme/jquery-ui-1.10.3.custom.css")" rel="stylesheet" type="text/css" />
    <!--[if lt IE 9]>
    <link href="@Url.Content("~/Content/custom-theme/jquery.ui.1.10.0.ie.css")" rel="stylesheet" type="text/css" />
    <![endif]-->
    <link href="@Url.Content("~/Content/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jqGrid.overrides.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <style type="text/css">
      body {
        padding-top: 100px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
    .alert-info {
        background-color: #772953;
        border-color:#772953;
        color:#fff;
        text-align:center;
        font-weight:bold;
    }

    </style>

</head>
<body>


    <div class="container">

@using (Html.BeginForm("Lista", "Postulante", FormMethod.Post, new { @class = "form-signin", enctype = "multipart/form-data", id = "frmLoginExtranet" }))
{
    @Html.ValidationSummary(true)

    @*<form class="form-signin" action="@Url.Action("Lista", "Postulante")">*@
        
        <div style="text-align:center;clear:both">
            <img src="@Url.Content("~/Content/images/sanpablo_logo2.GIF")" alt="Ingresar" title="Ingresar">
        </div>
        <br />
        <div class="alert alert-info" style="font-size:15px;display:none">
            Sistema de Reclutamiento y Seleccion de Personal
        </div>
        <label style="font-weight:bold;font-size:13px;">Usuario</label>
        @Html.TextBoxFor(model => model.UsuarioExtranet.CodUsuario, new { @class = "input-block-level" ,data_val = "false",placeholder="Usuario"}) 
        @*<input type="text" class="input-block-level" placeholder="Usuario">*@
        <label style="font-weight:bold;font-size:13px;">Contraseña</label>
        @*<input type="password" class="input-block-level" placeholder="Contraseña">*@
        @Html.TextBoxFor(model => model.UsuarioExtranet.CodContrasena, new { @class = "input-block-level" ,data_val = "false", type="password",placeholder="Contraseña" }) 
        <br />
        <br />
        <div style="text-align:center">
            @*<a href="@Url.Action("General","Postulante")" class="btn btn-info">Iniciar Sesión</a>*@
              <a id="btnIniciaSesion" class="btn btn-info">Iniciar Sesión</a>
        </div>
        <br />
        <br />
        <a style="font-weight:normal;font-size:11px;color:#99356b">¿No puedes acceder a tu cuenta?</a>
        <br />
        <span style="font-weight:normal;font-size:11px;color:#000">¿No dispones de una cuenta?  </span><a id="lnkRegistrarUsuario" href="#" style="font-weight:bold;font-size:12px;color:#99356b">Registrate Ahora</a>@*
        
    </form>*@
}
    </div> <!-- /container -->
    <div id="dialog" title="Create Album" style="overflow: hidden;">
        <form class="form-horizontal well">
            <div class="control-group">
                <label class="control-label" for="input01">Correo Electronico</label>
                <div class="controls">
                    <input type="text" class="input-medium" id="txtcorreo">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">Contraseña</label>
                <div class="controls">
                    <input type="password" class="input-medium" id="txtcontrasenha">
                    <span class="field-validation-valid" data-valmsg-for="Numero" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">Confirmar Contraseña</label>
                <div class="controls">
                    <input type="password" class="input-medium" id="txtrepetircontrasenha">                          
                </div>
            </div>
            <div class="form-actionsregistro pagination-centered">
                <a class="btn btn-info" href="#"><i class="icon-ok-sign icon-white"></i> Registrar</a>
            </div>
        </form>
    </div>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-migrate-1.2.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#lnkRegistrarUsuario").click(function (e) {
                e.preventDefault();
                $('#dialog').dialog('open');
            });

            $('#dialog').dialog({
                autoOpen: false,
                width: 486,
                height: 300,
                resizable: false,
                title: 'Registrar Usuario',
                modal: true,
                open: function (event, ui) {
                }
            });


            $('#btnIniciaSesion').click(function () {
                    $.ajax({
                        data: $("#frmLoginExtranet").serialize(),
                        type: "POST",
                        url: '@Url.Action("Logon", "Seguridad")',
                   
                    traditional: true,
                    success: function (data) {
                    }
                });
            });


        });


    </script>
</body>
</html>