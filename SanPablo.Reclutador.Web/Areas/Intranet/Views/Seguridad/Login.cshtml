@using (Html.BeginForm("Lista", "Postulante", FormMethod.Post, new { @class = "form-signin", enctype = "multipart/form-data", id = "frmLogin" }))
{
    @Html.ValidationSummary(true)

        <div style="text-align:center;clear:both">
            <img src="@Url.Content("~/Content/images/sanpablo_logo2.GIF")" alt="Ingresar" title="Ingresar">
        </div>
        <br />
        <div class="alert alert-info" style="font-size:15px">
            Sistema de Reclutamiento y Seleccion de Personal
        </div>
        <label style="font-weight:bold;font-size:13px;">Usuario</label>@*
        <input type="text" class="input-block-level" placeholder="Usuario" onblur="getRol()">*@
    
        @Html.TextBoxFor(model => model.Usuario.CodUsuario, new { @class = "textoFormulario" ,data_val = "false",onblur="getRol()" })  
        
         <label style="font-weight:bold;font-size:13px;">Contraseña</label>
        @*<input type="password" class="input-block-level" placeholder="Contraseña">*@
        @Html.TextBoxFor(model => model.Usuario.CodContrasena, new { @class = "textoFormulario" ,data_val = "false", type="password" }) 
            <div id="indRol">
                <label style="font-weight:bold;font-size:13px;">Rol</label>
               
               
                 @Html.DropDownListFor(model => model.Rol.IdRol, new SelectList(Model.listaRol, "IdRol", "CodRol", Model.Rol.IdRol), new {  data_val = "false" })     
               
                
                @*@Html.DropDownListFor(model => model.Rol.IdRol, new SelectList(Model.listaRol, "IdRol", "CodRol", Model.Rol.IdRol), new {  data_val = "false" })     *@

            </div>
            
            <div id="indSede">
            <label style="font-weight:bold;font-size:13px;">Sede</label>
            <select class="input-block-level">
                <option>Seleccionar</option>                
            </select>
       </div>
        <br />
        <br />
        <div style="text-align:center">
            <a href="@Url.Action("ListaNuevo", "SolicitudCargo", new { area = "Intranet" })" class="btn btn-info">Iniciar Sesión</a>
        </div>
        <br />

   @* </form>*@
