@model SanPablo.Reclutador.Web.Areas.Intranet.Models.UsuarioRolSedeViewModel
@{
    Layout = "";
}


<script src="@Url.Content("~/Scripts/Funciones.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {

    });

</script>


@using (Html.BeginForm("ResetPass", "Usuario", FormMethod.Post, new { id = "frmPopupPass" }))
    {
    @Html.ValidationSummary(true)
   
    <table style="margin-left:30px;">
        <tr >
            <td class="colEtiqueta" >
                <label class="etiquetaFormulario" for="setipoInstitucion">Ingrese contrase&ntilde;a anterior<span class="text-error">*</span></label>
            </td>
            <td class="colInput" >
               
                @Html.TextBoxFor(model => model.Password.PassAnterior, new { @class = "textoFormulario" , type = "password" , maxlength="15" })                      
                <div class="tex-error" style="font-size:12px;color:red">    
                @Html.ValidationMessageFor(model => model.Password.PassAnterior )
                </div>
            </td>
        </tr>
        
        
        <tr >
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" for="setInstitucion">Ingrese nueva contrase&ntilde;a<span class="text-error">*</span></label>
            </td>
            <td class="colInput;input-xxlarge">

                 @Html.TextBoxFor(model => model.Password.PassNuevo, new { @class = "textoFormulario" ,type = "password" ,  maxlength="15"})      
                <div class="tex-error" style="font-size:12px;color:red">   
                    @Html.ValidationMessageFor(model => model.Password.PassNuevo )
                </div>
            </td>
        </tr>    
        
         <tr >
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" for="setInstitucion">Confirme nueva contrase&ntilde;a<span class="text-error">*</span></label>
            </td>
            <td class="colInput;input-xxlarge">

                 @Html.TextBoxFor(model => model.Password.PassConfirma, new { @class = "textoFormulario" ,type = "password" ,  maxlength="15"})      
                <div class="tex-error" style="font-size:12px;color:red">   
                    @Html.ValidationMessageFor(model => model.Password.PassConfirma )
                </div>
            </td>
        </tr>    

        
        <tr>
            <td>
                &nbsp;
            </td>
        </tr>
       
    </table>
}
