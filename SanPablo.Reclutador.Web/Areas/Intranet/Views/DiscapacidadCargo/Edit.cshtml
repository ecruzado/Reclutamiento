@model SanPablo.Reclutador.Web.Areas.Intranet.Models.DiscapacidadCargoViewModel
@{
    Layout = "";
}

<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Funciones.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/SanPablo.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {

        SanPablo.Numeros('Discapacidad_PuntajeDiscapacidad');
    });

    $('input[data-val=true]').on('blur', function () {
        $(this).valid();
    });
</script>



@using (Html.BeginForm("Edit", "DiscapacidadCargo", FormMethod.Post, new { @id = "discapacidadForm" }))
{
    @Html.ValidationSummary(true)
    <div class="alert alert-info" id="mensajeError" style="display:none" >
        <a class="close" onclick="hide('mensajeError')" >×</a>
         <strong>ERROR : </strong> Verifique que los datos ingresados sean correctos.
    </div>
    <table style="margin-left:30px;">
        <tr>
            <td class="colEtiqueta">
                @Html.HiddenFor(model => model.Discapacidad.IdeDiscapacidadCargo)
                <label style="width:150px" class="etiquetaFormulario" for="setipoInstitucion"> Tipo de Discapacidad <span class="text-error">*</span></label>
            </td>
            <td class="colInput">
                @Html.DropDownListFor(model => model.Discapacidad.TipoDiscapacidad, new SelectList(Model.TipoDiscapacidad, "Valor", "Descripcion", Model.Discapacidad.TipoDiscapacidad))
                <div class="tex-error" style="font-size:12px;color:red"> 
                @Html.ValidationMessageFor(model => model.Discapacidad.TipoDiscapacidad)
                </div>
            </td> 
        </tr>
        <tr>
           <td class="colEtiqueta">
                <label style="width:130px" class="etiquetaFormulario" for="setipoInstitucion">Puntaje <span class="text-error">*</span></label>
           </td>
           <td>
                @Html.TextBoxFor(model => model.Discapacidad.PuntajeDiscapacidad, new { @class = "input-xxmini", maxlength = "2" })
               <div class="tex-error" style="font-size:12px;color:red"> 
                @Html.ValidationMessageFor(model => model.Discapacidad.PuntajeDiscapacidad)
                </div>
           </td>
       </tr>  
    </table>
}