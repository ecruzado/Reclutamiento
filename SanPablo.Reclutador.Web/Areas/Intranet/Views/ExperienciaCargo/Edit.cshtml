@model SanPablo.Reclutador.Web.Areas.Intranet.Models.ExperienciaCargoViewModel
@{
    Layout = "";
}
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/SanPablo.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Funciones.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
               
        SanPablo.Numeros('Experiencia_CantidadAnhosExperiencia');
        SanPablo.Numeros('Experiencia_CantidadMesesExperiencia');
        SanPablo.Numeros('Experiencia_PuntajeExperiencia');
    });

    $('input[data-val=true]').on('blur', function () {
        $(this).valid();
    });
</script>



@using (Html.BeginForm("Edit", "ExperienciaCargo", FormMethod.Post, new { @id = "experienciaForm" }))
{
    @Html.ValidationSummary(true)
    <div class="alert alert-info" id="mensajeError" style="display:none" >
        <a class="close" onclick="hide('mensajeError')" >×</a>
         <strong>ERROR : </strong> Verifique que los datos ingresados sean correctos.
    </div>
    <table style="margin-left:30px;">
        <tr>
            <td class="colEtiqueta">
                @Html.HiddenFor(model => model.Experiencia.IdeExperienciaCargo)
                <label style="width:130px" class="etiquetaFormulario" for="setipoInstitucion"> Cargo <span class="text-error">*</span></label>
            </td>
            <td class="colInput">
                @Html.DropDownListFor(model => model.Experiencia.TipoExperiencia, new SelectList(Model.TiposCargo, "Valor", "Descripcion", Model.Experiencia.TipoExperiencia))
                <div class="tex-error" style="font-size:12px;color:red"> 
                @Html.ValidationMessageFor(model => model.Experiencia.TipoExperiencia)
                </div>
            </td> 
        </tr>
    </table>
    <table>
        
        <tr>
            <td></td>
            
            <td class="colEtiqueta">
                <label style="width:60px" class="etiquetaFormulario" for="setipoInstitucion">Años <span class="text-error">*</span></label>
            </td>
            <td class="colEtiqueta">
                <label style="width:60px" class="etiquetaFormulario" for="setipoInstitucion">Meses <span class="text-error">*</span></label>
            </td>
            <td></td>
            <td></td>
        </tr>
        
        <tr>
            <td class="colEtiqueta">
                <label style="width:160px" class="etiquetaFormulario" for="setipoInstitucion">Tiempo de Experiencia <span class="text-error">*</span></label>
            </td>
            
            <td class="colInput">
                 @Html.TextBoxFor(model => model.Experiencia.CantidadAnhosExperiencia, new {@class="input-mini" ,  maxlength="2" })
                <div class="tex-error" style="font-size:12px;color:red"> 
                @Html.ValidationMessageFor(model => model.Experiencia.CantidadAnhosExperiencia)
                </div>
            </td>
            @*<td class="colEtiqueta">
                <label style="width:60px" class="etiquetaFormulario" for="setipoInstitucion">AÑOS <span class="text-error">*</span></label>
            </td>*@
           
            <td class="colInput">
                 @Html.TextBoxFor(model => model.Experiencia.CantidadMesesExperiencia, new {@class="input-mini",  maxlength="2" })
                <div class="tex-error" style="font-size:12px;color:red"> 
                 @Html.ValidationMessageFor(model => model.Experiencia.CantidadMesesExperiencia)
                </div>
            </td>
             
        </tr>
        <tr>
           <td class="colEtiqueta">
                <label style="width:160px" class="etiquetaFormulario" for="setipoInstitucion">Puntaje <span class="text-error">*</span></label>
           </td>
           <td>
                @Html.TextBoxFor(model => model.Experiencia.PuntajeExperiencia, new {@class="input-xxmini" ,  maxlength="2" })
               <div class="tex-error" style="font-size:12px;color:red"> 
                 @Html.ValidationMessageFor(model => model.Experiencia.PuntajeExperiencia)
                </div>
           </td>

       </tr>  
    </table>
}