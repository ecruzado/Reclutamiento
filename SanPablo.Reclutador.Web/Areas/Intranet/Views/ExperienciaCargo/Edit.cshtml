@model SanPablo.Reclutador.Web.Areas.Intranet.Models.CargoViewModel
@{
    Layout = "";
}

<script type="text/javascript">
    $(document).ready(function () {
               
        
    });
</script>



@using (Html.BeginForm("Experiencia", "Cargo", FormMethod.Post, new { @id = "experienciaForm" }))
{
    @Html.ValidationSummary(true)
    <div class="alert alert-info" id="mensajeError" style="display:none" >
        <a class="close" onclick="hide('mensajeError')" >×</a>
         <strong>ERROR : </strong> Verifique que los datos ingresados sean correctos.
    </div>
    <table style="margin-left:30px;">
        <tr>
            <td class="colEtiqueta">
                @*@Html.HiddenFor(model => model.Cargo.IdeCargo)*@
                <label style="width:130px" class="etiquetaFormulario" for="setipoInstitucion"> Cargo <span class="text-error">*</span></label>
            </td>
            <td class="colInput">
                @Html.DropDownListFor(model => model.Experiencia.TipoExperiencia, new SelectList(Model.TipoCargos, "Valor", "Descripcion", Model.Experiencia.TipoExperiencia))
                <div class="tex-error" style="font-size:12px;color:red"> 
                @*@Html.ValidationMessageFor(model => model.Discapacidad.TipoDiscapacidad)*@
                </div>
            </td> 
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label style="width:130px" class="etiquetaFormulario" for="setipoInstitucion">Tiempo de Experiencia <span class="text-error">*</span></label>
            </td>
            <td class="colInput">
                 @Html.TextBoxFor(model => model.Experiencia.CantidadAnhosExperiencia)
                <div class="tex-error" style="font-size:12px;color:red"> 
                @*@Html.ValidationMessageFor(model => model.Discapacidad.TipoDiscapacidad)*@
                </div>
            </td>
            <td class="colInput">
                 @Html.TextBoxFor(model => model.Experiencia.CantidadMesesExperiencia)
                <div class="tex-error" style="font-size:12px;color:red"> 
                @*@Html.ValidationMessageFor(model => model.Discapacidad.TipoDiscapacidad)*@
                </div>
            </td>
        </tr>
        <tr>
           <td class="colEtiqueta">
                <label style="width:130px" class="etiquetaFormulario" for="setipoInstitucion">Puntaje <span class="text-error">*</span></label>
           </td>
           <td>
                @Html.TextBoxFor(model => model.Experiencia.PuntajeExperiencia, new {@class="input-xxmini" })
           </td>
       </tr>  
    </table>
}