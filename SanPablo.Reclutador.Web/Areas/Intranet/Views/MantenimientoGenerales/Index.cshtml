@model SanPablo.Reclutador.Web.Areas.Intranet.Models.MantenimientoGeneralViewModel
@using SanPablo.Reclutador.Entity

@{
    ViewBag.Title = "Mantenimiento Tablas Generales";
}
@section Head{
   

}
@section Scripts{
<script src="@Url.Content("~/Scripts/Funciones.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {


        $('#btnNuevo').click(function () {
            window.location = '@Url.Action("Nuevo", "Usuario")';
        });

        $('#btnBuscarUsuario').click(function () {
            $('#grdListUsuario').trigger('reloadGrid');
        });

        $('#btnEditar').click(function () {
            var selr = jQuery('#grdList').jqGrid('getGridParam', 'selrow');
            if (selr != null) {
                mostrarEditarDetalle(selr);
            } else {
                MostrarMensaje('Seleccione un item', "Sistema de Reclutamiento Y Seleccion de Personal");
            }



        });


        $('#updateDialog').dialog({
            autoOpen: false,
            width: 600,
            height: 600,
            resizable: false,
            modal: true,
            buttons: {
                //"Grabar": function () {
                //    $('#confSede').dialog('open');

                //},
                "Cerrar": function () {
                    $(this).dialog("close");
                }
            }
        });

        $('#btnConsultar').click(function () {
            var selr = jQuery('#grdListUsuario').jqGrid('getGridParam', 'selrow');

            if (selr != null) {
                window.location = '@Url.Action("Consulta", "Usuario", new { id = ""})' + '/' + selr;
            } else {
                MostrarMensaje('Seleccione un usuario', "Sistema de Reclutamiento Y Seleccion de Personal");
            }


        });

        $('#btnSedeNivel').click(function () {
            var idUsu = $("#Usuario_IdUsuario").val();
            var selr = jQuery('#grdListaNivelSede').jqGrid('getGridParam', 'selrow');
            var rowData = jQuery('#grdListaNivelSede').jqGrid('getRowData', selr);
            var idSede = rowData.IDESEDE;

            if (idSede != null && idSede > 0) {
                mostrarPopupSedeNivel(idUsu, idSede);
            } else {
                MostrarMensaje('Ingrese un registro', "Sistema de Reclutamiento Y Seleccion de Personal");
            }

        });

        jQuery("#grdList").jqGrid({
            datatype: function (postdata) {
                var migrilla = new Object();
                migrilla.page = postdata.page;
                migrilla.rows = postdata.rows;
                migrilla.sidx = postdata.sidx;
                migrilla.sord = postdata.sord;
                migrilla._search = postdata.isSearch;
                migrilla.filters = postdata.filters;
                //migrilla.Rules = [

                //    { field: 'idUsuario', data: jQuery('#grdList').jqGrid('getGridParam', 'selrow') },
                //    { field: 'idRol', data: $("#UsuarioRolSede_IdRol").val() },
                //    { field: 'idSede', data: $("#UsuarioRolSede_IdSede").val() },
                //    { field: 'nombre', data: $("#Usuario_DscNombres").val() },
                //    { field: 'codUsu', data: $("#Usuario_CodUsuario").val() },
                //    { field: 'apellidoPat', data: $("#Usuario_DscApePaterno").val() },
                //    { field: 'apellidoMat', data: $("#Usuario_DscApeMaterno").val() }

                //];

                if (migrilla._search == true) {
                    migrilla.searchField = postdata.searchField;
                    migrilla.searchOper = postdata.searchOper;
                    migrilla.searchString = postdata.searchString;
                }

                var params = { grid: migrilla };

                $.ajax({
                    url: '@Url.Action("ListaGeneral", "MantenimientoGenerales")',
                    type: 'post',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(params),
                    async: false,
                    success: function (data, st) {
                        if (st == 'success') {
                            var jq = $('#grdList')[0];
                            jq.addJSONData(data);
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });
            },
            colNames: ['Tipo Tabla', 'Descripcion', 'Tipo Dato', 'Long. Campo'],
            colModel: [
                    
                    { name: 'TipoTabla', index: 'TipoTabla', align: 'center', sortable: false, width: 200 },
                    { name: 'Descripcion', index: 'Descripcion', align: 'center', sortable: false, width: 350 },
                    { name: 'TipoDato', index: 'TipoDato', align: 'center', sortable: false },
                    { name: 'LongitudCampo', index: 'LongitudCampo', align: 'left' }

            ],


            pager: jQuery('#grdPager'),
            rowNum: 10,
            rowList: [10, 30, 50],
            autowidth: true,
            rules: true,
            sortname: 'IdeGeneral',
            sortorder: 'desc',
            viewrecords: true,
            height: 350,
            cellsubmit: 'clientArray',
            hidegrid: false,
            rownumbers: true,
            shrinkToFit: false,

            postData: {
            }, loadComplete: function (data) {
            }
        });

    });

    function mostrarEditarDetalle(id) {
        var dialogDiv = $('#updateDialog');

        $.get('@Url.Action("Edit", "MantenimientoGenerales", new { area = "Intranet"})?id=' + id, function (data) {

        dialogDiv.html(data);
        $.validator.unobtrusive.parse($("#updateDialog"));
        dialogDiv.dialog('open');

        });
        return false;
    }

    function ActivarDesactivarUsuario(selr, estado) {

        $.ajax({
            data: {
                id: selr,
                codEstado: estado
            },
            type: "POST",
            url: "@Url.Action("ActivarDesactivar", "Usuario")",
            traditional: true,
            success: function (data) {
                if (data.redirecciona) {
                    SanPablo.Redirecciona('@Url.Action("Login", "Seguridad")');
                }
                if (data.Resultado == false) {
                    MostrarMensaje(data.Mensaje, "Sistema de Reclutamiento Y Seleccion de Personal");
                } else {
                    MostrarMensaje(data.Mensaje, "Sistema de Reclutamiento Y Seleccion de Personal");
                    $('#grdListUsuario').trigger('reloadGrid');
                }
            }
        });

    }

    function MostrarMensaje(mensaje, titulo) {
        Funciones.Alert("divMensaje", "spnMensaje", mensaje, titulo);
    }


   
   
</script>
}
@using (Html.BeginForm("Index", "MantenimientoGenerales", FormMethod.Post, new { enctype = "multipart/form-data", id = "mantenimientoGeneralForm" }))
{
    @Html.ValidationSummary(true)
<div class="row">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title">
                <h5>Tablas Generales</h5>
            </div>
            <table class="formulario-busqueda">
                <tr class="formulario-fila">
                     
                    
                     <td class="span5">
                        <div class="">
                            <label class="control-label" for="inputSuccess">Tipo Tabla</label>
                            <div class="controles">
                                @Html.DropDownListFor(model => model.TablaGeneral.IdeGeneral, new SelectList(Model.tipoTablas, "IdeGeneral", "TipoTabla", Model.TablaGeneral.IdeGeneral)) 
                            </div>
                        </div>
                    </td>
                    
                    
                     <td class="span5">
                        <div class="">
                            <label class="control-label" for="inputSuccess">Descripcion</label>
                            <div class="controles">
                               @Html.TextBoxFor(model => model.TablaGeneral.Descripcion) 
                            </div>
                        </div>
                    </td>
                 </tr>
                
                <tr class="formulario-accion offset9">
                    <td>
                    <a id="btnBuscarUsuario"  class="btn btn-info"><i class="icon-search icon-white"></i> Buscar</a>
                    <button id ="btnLimpiarUsuario" type="reset" class="btn"><i class="icon-trash"></i> Limpiar</button>
                    </td>
                </tr>
                 <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
            </table>
            <div class="tabla-datos">
                <table id="grdList">
                </table>
                <div id="grdPager"></div>
            </div>
            <div class="form-actions">
                @*<a  id="btnNuevo" class="btn btn-info" ><i class="icon-plus icon-white"></i> Nuevo</a>*@
                <a  id ="btnConsultar" class="btn btn-info" ><i class="icon-zoom-in icon-white"></i> Consultar</a>
                <a  id ="btnEditar" class="btn btn-info" ><i class="icon-pencil icon-white"></i> Editar</a>
                @*<a  id="btnActivarDesactivar" class="btn btn-info"><i class="icon-check icon-white"></i> Activar / Desactivar</a>*@
                @*<a id="btnEliminar" class="btn btn-danger"><i class="icon-remove icon-white"></i> Eliminar</a>*@
                
            </div>
        </div>
    </div>
</div>
}
<div id="divMensaje">
        <span id="spnMensaje"></span>
</div>
<div id="confirmacion"><span id="spanConfirmacion"></span></div>
<div id="divActivarDesactivar"><span id="spanActivarDesactivar"></span></div>
<div id="divEliminar"><span id="spanEliminar"></span></div>


<div id="updateDialog" title="Detalle General" ></div>