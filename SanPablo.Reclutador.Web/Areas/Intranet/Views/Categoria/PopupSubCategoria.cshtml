@model SanPablo.Reclutador.Web.Areas.Intranet.Models.CategoriaViewModel
@{
    Layout = "";
}

<script src="@Url.Content("~/Scripts/Funciones.js")" type="text/javascript"></script>

<script type="text/javascript">
    
   
</script>

@using (Html.BeginForm("PopupSubCategoria", "Categoria", FormMethod.Post, new { id = "frmPopupSubCategoria" }))
{
    @Html.ValidationSummary(true)
    @Html.TextBoxFor(model => model.Categoria.IDECATEGORIA, new { style = "display: none;" })
    @Html.TextBoxFor(model => model.SubCategoria.IDESUBCATEGORIA, new { style = "display: none;" })

    
    
    

    <table style="margin-left:30px;">
        <tr >
            <td class="colEtiqueta" >
                <label class="etiquetaFormulario" for="setAlternativa">Nombre<span class="text-error">*</span></label>
            </td>
            <td class="colInput" >
               
               @Html.TextBoxFor(model => model.SubCategoria.NOMSUBCATEGORIA, new { @maxlength = "25" ,onblur="aMays(event, this)"})
                <div class="tex-error" style="font-size:12px;color:red">    
               @Html.ValidationMessageFor(model => model.SubCategoria.NOMSUBCATEGORIA)
                </div>
            </td>
        </tr>
        <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" for="setDesc">Descripción<span class="text-error">*</span></label>
            </td>
            <td class="colInput;input-xxlarge">

               @Html.TextBoxFor(model => model.SubCategoria.DESCSUBCATEGORIA, new { @maxlength = "50" ,onblur="aMays(event, this)"})
               <div class="tex-error" style="font-size:12px;color:red">   
               @Html.ValidationMessageFor(model => model.SubCategoria.DESCSUBCATEGORIA)
               </div>
            </td>
        </tr>
         <tr>
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" for="setDesc">Duración(Min)<span class="text-error">*</span></label>
            </td>
            <td class="colInput;input-xxlarge">

               @Html.TextBoxFor(model => model.SubCategoria.TIEMPO, new { @maxlength = "5" ,onkeypress="return Funciones.isNumberKey(event)"})
               <div class="tex-error" style="font-size:12px;color:red">   
               @Html.ValidationMessageFor(model => model.SubCategoria.TIEMPO)
               </div>
            </td>
        </tr>
        
       
    </table>
}
<div id="updateDialog" title="Alternativa"></div>

