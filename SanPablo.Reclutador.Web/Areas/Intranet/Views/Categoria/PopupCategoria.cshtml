            </td>
            <td class="colInput">
                @Html.DropDownListFor(model => model.Categoria.TipoCriterio, new SelectList(Model.TipoCriterio, "Valor", "Descripcion", Model.Categoria.TipoCriterio),new { data_val = "false" ,@disabled = "disabled"})
            </td>
            <td style="width:40px;"></td> 
        <td class="colEtiqueta">
             <label class="etiquetaFormulario" >Descripción</label>
            </td>   
            <td class="colInput">
                @Html.TextBoxFor(model => model.Categoria.DESCCATEGORIA, new { @class = "textoFormulario", @maxlength = "150" , data_val = "false",onkeyup="aMays(event, this)"}) 
            </td>
        </tr>
        @*<tr >
            <td class="colEtiqueta">
                <label class="etiquetaFormulario" for="inputSuccess">Estado</label>
            </td>
            <td class="colInput">
                @Html.DropDownListFor(model => model.Categoria.ESTACTIVO, new SelectList(Model.TipoEstado, "Valor", "Descripcion", Model.Categoria.ESTACTIVO),new { data_val = "false" })
            </td>
        </tr>*@

        <tr >
            <td class="opciones" style="text-align:right" colspan="6">
                <a id="btnBuscarCategoria" class="btn btn-small btn-info"><i class="icon-search icon-white"></i> Buscar</a>
                <a id="btnLimpiarCategoria" class="btn"><i class="icon-trash"></i> Limpiar</a>
                 <div style="clear:both"></div>
            </td>
        </tr>
        <tr>
            <td>
                &nbsp;
            </td>
        </tr>
              
    </table>
        <div class="tabla-datos">
        <table id="grdListaCategoriaPopup">
        </table>
        <div id="grdPagerCategoriaPopup">
        </div>
    </div>
        
  
}